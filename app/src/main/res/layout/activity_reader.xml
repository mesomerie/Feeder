<?xml version="1.0" encoding="utf-8"?>

<com.nononsenseapps.feeder.views.DrawShadowFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/main_content"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clipChildren="false"
  app:shadowDrawable="@drawable/header_shadow">
  <!-- As the main content view, the view below consumes the entire
       space available using match_parent in both dimensions. -->
  <FrameLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <!-- Present here and not in fragment to have it centered on screen at all times -->
  <ProgressBar
    android:id="@+id/progressBar"
    style="?android:attr/progressBarStyle"
    android:layout_gravity="center"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

  <LinearLayout
    android:id="@+id/headerbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:elevation="4dp">

    <include layout="@layout/toolbar_actionbar" />
  </LinearLayout>

</com.nononsenseapps.feeder.views.DrawShadowFrameLayout>
